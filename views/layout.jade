html(lang='en')
head
	link(rel='stylesheet', href='/stylesheets/styles.css', type='text/css')
	link(rel='stylesheet', href='/scripts/jquery/css/smoothness/jquery-ui-1.8.14.custom.css', type='text/css')
	- if (typeof(stylesheet) != 'undefined')
		!= "<link rel='stylesheet' type='text/css' href='/stylesheets/"+stylesheet+ ".css' />"
	title NYU Hackdays
	script(src='/scripts/jquery/js/jquery-1.6.2.min.js')
	script(src='/scripts/jquery/js/jquery-ui-1.8.14.custom.min.js')
	script
		$(document).ready(function() {
			$('#contact_dialog').dialog({
				title: "Send a message to the Hursh!",
				autoOpen: false,
				modal: true,
				height: 400,
				width: 400,
				resizable: false,
				show: 'fade',
				hide: 'fade',
			});
			$('#contact_form').submit(function() {
				$('#contact_form').fadeOut(200);
				$('#sender_thingy').html('Sending...');
				setTimeout("$('#sender_thingy').fadeIn(200);", 220);
				/*
				$.ajax({
					url: $(this).attr('action'),
					type: json,
					success: function() {
						$('#sender_thingy').html('Thanks! Your message has been sent!');
						$('#contact_dialog').dialog('close');
					},
					error: function() {
						$('#sender_thingy').html('Oh snap! Something broke, yo.');
					},
				});
				*/
				return false;
			});
		});

body
	#contact_dialog
		form#contact_form(method='post', action='/mailer.js')
			label(for="email") Your E-mail Address:
			input(type='text', name='email')
			label(for="message") Message:
			textarea(name='message')
			div#send_button
				button(type='submit') Send
		#sender_thingy
			
	#container
		#header
			#logo
				img(src='/images/hackdays.png')
			#navigation
				ul#list
					li: a(href="http://cs.nyu.edu/mailman/listinfo/hackdays") LISTSERVE
					li |
					li: a(href="#", onclick="$('#contact_dialog').dialog('open');") CONTACT
					li |
					li
						a(href="http://www.techatnyu.com")
							img#tech(src='/images/techatnyu.png')
		#main!= body
